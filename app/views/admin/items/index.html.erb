<div class="dashboard__container">

<% @items.each do |item| %>
<div class='category-container'>
  <h2 class='small-font'><%= item.name %></h2>
  <div class="buttons">
  <%= link_to 'edit' ,edit_admin_category_item_path(item.category, item), class:'btn btn-crud btn-crud--edit' %>
  <%= link_to 'show',item_path(item), class:'btn btn-crud btn-crud--show' %>
  <%= button_to 'destroy',admin_category_item_path(item.category, item), class:'btn btn-crud btn-crud--delete', method: :delete %>
     </div>
  </div>
 
<% end %>
</div>